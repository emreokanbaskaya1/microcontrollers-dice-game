#include <16F877A.h>
#fuses XT, NOWDT, NOPROTECT, NOBROWNOUT, NOLVP, NOPUT, NOWRT, NODEBUG, NOCPD
#use delay(clock=4M)
#include <lcd420.c>

// LCD Pin Tanýmlarý
#define LCD_RS_PIN PIN_B1
#define LCD_RW_PIN PIN_B2
#define LCD_E_PIN  PIN_B0
#define LCD_D4_PIN PIN_B4
#define LCD_D5_PIN PIN_B5
#define LCD_D6_PIN PIN_B6
#define LCD_D7_PIN PIN_B7

// Global deðiþkenler
int oyun_durumu = 0;  // 0: Baþlangýç, 1: Oyuncu 1 Atýþ, 2: Oyuncu 2 Atýþ
int oyuncu1_zarlar[3];  
int oyuncu2_zarlar[3];
int oyuncu1_toplam = 0; 
int oyuncu2_toplam = 0;
int zar_sayisi = 0;

// Rastgele zar atma fonksiyonu
int zar_atisi() {
    int timer_value = get_timer0();
    set_timer0(0);
    return (timer_value % 6) + 1;  // 1-6 arasý deðer
}

// LCD'de zar atýþ sonuçlarýný göster
void guncelle_lcd() {
    lcd_putc("\f");
    lcd_gotoxy(1, 1);
    printf(lcd_putc, "P1: %d+%d+%d", oyuncu1_zarlar[0], oyuncu1_zarlar[1], oyuncu1_zarlar[2]);
    lcd_gotoxy(1, 2);
    printf(lcd_putc, "P2: %d+%d+%d", oyuncu2_zarlar[0], oyuncu2_zarlar[1], oyuncu2_zarlar[2]);
}

void kazanan_mesaji() {
    lcd_putc("\f");
    lcd_gotoxy(1, 1);
    printf(lcd_putc, "P1: %d  P2: %d", oyuncu1_toplam, oyuncu2_toplam);
    delay_ms(1000);
    lcd_putc("\f");
    lcd_gotoxy(1, 1);
    if (oyuncu1_toplam > oyuncu2_toplam) {
        printf(lcd_putc, "Oyuncu 1 Kazandi!");
    } else if (oyuncu2_toplam > oyuncu1_toplam) {
        printf(lcd_putc, "Oyuncu 2 Kazandi!");
    } else {
        printf(lcd_putc, "Berabere!");
    }
    delay_ms(2000);
}

void baslangic_mesaji() {
    lcd_putc("\f");
    lcd_gotoxy(1, 1);
    printf(lcd_putc, "Lutfen CALISTIR");
    lcd_gotoxy(1, 2);
    printf(lcd_putc, "butonuna basin");
}

void hosgeldiniz_mesaji() {
    lcd_putc("\f");
    lcd_gotoxy(5, 1);
    printf(lcd_putc, "Hosgeldiniz!");
    delay_ms(1000);
}

void start_mesaji() {
    lcd_putc("\f");
    lcd_gotoxy(1, 1);
    printf(lcd_putc, "START butonuna");
    lcd_gotoxy(1, 2);
    printf(lcd_putc, "basiniz...");
    delay_ms(500);
}

void main() {
    lcd_init();
    set_tris_a(0x01);  // RA0 giriþ (START)
    set_tris_c(0x03);  // RC0 (CALISTIR) ve RC1 (RESET)
    set_tris_d(0x00);  // RD portu çýkýþ (LED)
    setup_timer_0(RTCC_INTERNAL | RTCC_DIV_256);

    baslangic_mesaji();

    while (TRUE) {
        if (oyun_durumu == 0 && input(PIN_C0)) {  // ÇALIÞTIR butonu
            delay_ms(200);
            hosgeldiniz_mesaji();
            start_mesaji();
            oyun_durumu = 1;
        }

        if (oyun_durumu == 1 && input(PIN_A0)) {  // START butonu
            delay_ms(200);
            for (zar_sayisi = 0; zar_sayisi < 3; zar_sayisi++) {
                oyuncu1_zarlar[zar_sayisi] = zar_atisi();
                oyuncu1_toplam += oyuncu1_zarlar[zar_sayisi];
                oyuncu2_zarlar[zar_sayisi] = zar_atisi();
                oyuncu2_toplam += oyuncu2_zarlar[zar_sayisi];
                guncelle_lcd();
                delay_ms(1000);
            }
            kazanan_mesaji();
            
            // Oyunu resetle
            oyun_durumu = 0;
            zar_sayisi = 0;
            oyuncu1_toplam = 0;
            oyuncu2_toplam = 0;
            for (int i = 0; i < 3; i++) {
                oyuncu1_zarlar[i] = 0;
                oyuncu2_zarlar[i] = 0;
            }
            baslangic_mesaji();
        }
    }
}

